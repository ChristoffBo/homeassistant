{
  "name": "Addons Updater Enhanced",
  "version": "3.0.0",
  "slug": "addons_updater_enhanced",
  "description": "Automatically update addons with Gotify notifications and Gitea support",
  "url": "https://github.com/yourusername/your-repo",
  "arch": ["aarch64", "amd64", "armv7"],
  "startup": "application",
  "boot": "manual",
  "hassio_api": true,
  "hassio_role": "manager",
  "map": ["config:rw", "backup:rw"],
  "options": {
    "gituser": "Your Name",
    "gitmail": "your@email.com",
    "gitapi": null,
    "repository": "alexbelgium/hassio-addons",
    "verbose": false,
    "dry_run": false,
    "enable_notifications": false,
    "gotify_url": null,
    "gotify_token": null,
    "gitea_api_url": null,
    "gitea_token": null
  },
  "schema": {
    "gituser": "str",
    "gitmail": "str?",
    "gitapi": "str?",
    "repository": "str",
    "verbose": "bool",
    "dry_run": "bool",
    "enable_notifications": "bool",
    "gotify_url": "str?",
    "gotify_token": "str?",
    "gitea_api_url": "str?",
    "gitea_token": "str?"
  }
}
