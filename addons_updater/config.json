{
  "arch": [
    "aarch64",
    "amd64",
    "armv7"
  ],
  "boot": "manual",
  "codenotary": "alexandrep.github@gmail.com",
  "description": "Automatic addons update by aligning version tag with upstream releases",
  "environment": {
    "GIT_DISCOVERY_ACROSS_FILESYSTEM": "1"
  },
  "image": "ghcr.io/alexbelgium/addons_updater-{arch}",
  "init": false,
  "map": [
    "addon_config:rw"
  ],
  "name": "Repository Updater",
  "options": {
    "gitapi": "gitapi",
    "gituser": "gituser",
    "repository": "alexbelgium/hassio-addons",
    "dry_run": false,
    "verbose": false,

    "notifications_enabled": true,
    "notification_service": "gotify",
    "notification_url": "http://your.gotify.server:port",
    "notification_token": "YOUR_GOTIFY_APP_TOKEN"
  },
  "schema": {
    "dry_run": "bool?",
    "gitapi": "str",
    "gitmail": "str?",
    "gituser": "str",
    "repository": "str",
    "verbose": "bool?",

    "notifications_enabled": "bool?",
    "notification_service": "str?",
    "notification_url": "str?",
    "notification_token": "str?"
  },
  "slug": "updater",
  "udev": true,
  "url": "https://github.com/alexbelgium/hassio-addons/tree/master/addons_updater",
  "version": "3.19.10"
}
