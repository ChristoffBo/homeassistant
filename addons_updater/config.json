{
  "name": "Addons Updater Enhanced",
  "version": "3.0.0",
  "slug": "addons_updater_enhanced",
  "description": "Automatically update addons with Gotify notifications and Gitea support",
  "url": "https://github.com/alexbelgium/hassio-addons/tree/master/addons_updater",
  "arch": ["aarch64", "amd64", "armv7", "armhf"],
  "startup": "application",
  "boot": "manual",
  "hassio_api": true,
  "hassio_role": "manager",
  "map": ["config:rw", "backup:rw"],
  "options": {
    "repo_source": "github",
    "enable_notifications": false,
    "gotify_url": null,
    "gotify_token": null,
    "gitea_api_url": null,
    "gitea_token": null,
    "github_token": null,
    "gitlab_token": null,
    "repo_path": "/config/addons",
    "repo_branch": "main",
    "addon_paths": ["addons", "community"],
    "update_mode": "commit",
    "timeout": 300,
    "log_level": "info",
    "validate_ssl": true,
    "dry_run": false
  },
  "schema": {
    "repo_source": "list(github|gitlab|gitea)",
    "enable_notifications": "bool",
    "gotify_url": "str?",
    "gotify_token": "str?",
    "gitea_api_url": "str?",
    "gitea_token": "str?",
    "github_token": "str?",
    "gitlab_token": "str?",
    "repo_path": "str",
    "repo_branch": "str",
    "addon_paths": ["str"],
    "update_mode": "list(commit|push)",
    "timeout": "int(60,3600)",
    "log_level": "list(debug|info|warning|error)",
    "validate_ssl": "bool",
    "dry_run": "bool"
  }
}
