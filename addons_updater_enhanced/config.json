{
  "name": "Addons Updater Enhanced",
  "version": "1.1.0",
  "slug": "addons_updater_enhanced",
  "description": "Automatically updates Home Assistant addons with support for GitHub/Gitea and Gotify notifications",
  "url": "https://github.com/your-repo/addons_updater_enhanced",
  "arch": ["aarch64", "amd64", "armhf", "armv7", "i386"],
  "startup": "once",
  "boot": "manual",
  "options": {
    "repo_source": "github",
    "gotify_url": null,
    "gotify_token": null,
    "gitea_api_url": null,
    "gitea_token": null,
    "repo_path": "/config/addons",
    "repo_branch": "main",
    "addon_paths": ["addons", "community-addons"],
    "update_mode": "commit",
    "dry_run": false
  },
  "schema": {
    "repo_source": "list(github|gitea)",
    "gotify_url": "str?",
    "gotify_token": "str?",
    "gitea_api_url": "str?",
    "gitea_token": "str?",
    "repo_path": "str",
    "repo_branch": "str",
    "addon_paths": ["str"],
    "update_mode": "list(commit|push)",
    "dry_run": "bool"
  }
}
