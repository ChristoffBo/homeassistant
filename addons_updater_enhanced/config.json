{
  "name": "Addons Updater Enhanced",
  "version": "4.1.1",
  "slug": "addons_updater_enhanced",
  "description": "Addon updater with optional notifications",
  "url": "https://github.com/your-repo/addons_updater_enhanced",
  "arch": ["aarch64", "amd64", "armhf", "armv7", "i386"],
  "startup": "application",
  "boot": "manual",
  "hassio_api": true,
  "hassio_role": "manager",
  "map": ["config:rw", "backup:rw"],
  "options": {
    "repo_source": "github",
    "enable_notifications": false,
    "gotify_url": null,
    "gotify_token": null,
    "repo_path": "/config/addons",
    "addon_paths": ["addons"],
    "update_mode": "commit"
  },
  "schema": {
    "repo_source": "list(github|gitea)",
    "enable_notifications": {
      "name": "Enable notifications",
      "type": "boolean",
      "default": false
    },
    "gotify_url": {
      "name": "Gotify URL",
      "type": "string",
      "required": false,
      "nullable": true
    },
    "gotify_token": {
      "name": "Gotify Token",
      "type": "string",
      "required": false,
      "nullable": true
    },
    "repo_path": "str",
    "addon_paths": ["str"],
    "update_mode": "list(commit|push)"
  }
}
