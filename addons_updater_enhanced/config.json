{
  "name": "Addons Updater Enhanced",
  "version": "4.0.0",
  "slug": "addons_updater_enhanced",
  "description": "Enhanced version of alexbelgium's addon-updater with GitHub/Gitea support and optional Gotify notifications",
  "url": "https://github.com/your-repo/addons_updater_enhanced",
  "arch": ["aarch64", "amd64", "armhf", "armv7", "i386"],
  "startup": "application",
  "boot": "manual",
  "hassio_api": true,
  "hassio_role": "manager",
  "map": ["config:rw", "backup:rw", "ssl:rw"],
  "options": {
    "repo_source": "github",
    "enable_gotify": false,
    "gotify_url": null,
    "gotify_token": null,
    "gitea_api_url": null,
    "gitea_token": null,
    "repo_path": "/config/addons",
    "repo_branch": "main",
    "addon_paths": ["addons", "community"],
    "update_mode": "commit",
    "timeout": 300,
    "log_level": "info",
    "validate_ssl": true
  },
  "schema": {
    "repo_source": {
      "type": "list",
      "options": ["github", "gitea"],
      "default": "github",
      "required": true
    },
    "enable_gotify": {
      "type": "boolean",
      "default": false,
      "required": false
    },
    "gotify_url": {
      "type": "string",
      "required": false,
      "pattern": "^(https?://.+)|$"
    },
    "gotify_token": {
      "type": "string",
      "required": false,
      "pattern": "^[a-zA-Z0-9-]*$"
    },
    "gitea_api_url": {
      "type": "string",
      "required": false,
      "pattern": "^(https?://.+)|$"
    },
    "gitea_token": {
      "type": "string",
      "required": false,
      "pattern": "^[a-zA-Z0--]*$"
    },
    "repo_path": {
      "type": "string",
      "required": true,
      "pattern": "^/.*"
    },
    "repo_branch": {
      "type": "string",
      "required": true,
      "pattern": "^[a-zA-Z0-9-_./]+$"
    },
    "addon_paths": {
      "type": "list",
      "required": true,
      "items": {
        "type": "string",
        "pattern": "^[a-zA-Z0-9-_]+$"
      }
    },
    "update_mode": {
      "type": "list",
      "options": ["commit", "push"],
      "default": "commit",
      "required": true
    },
    "timeout": {
      "type": "integer",
      "min": 60,
      "max": 3600,
      "default": 300
    },
    "log_level": {
      "type": "list",
      "options": ["debug", "info", "warning", "error"],
      "default": "info"
    },
    "validate_ssl": {
      "type": "boolean",
      "default": true
    }
  }
}
