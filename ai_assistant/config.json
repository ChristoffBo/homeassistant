{
  "name": "AI Assistant Pro",
  "version": "3.4.0",
  "slug": "ai_assistant_pro",
  "description": "Full-featured AI Assistant with chat, code, and teaching modes",
  "arch": ["amd64", "armv7", "aarch64"],
  "startup": "application",
  "boot": "auto",
  "ingress": true,
  "ingress_port": 5000,
  "panel_icon": "mdi:robot",
  "panel_title": "AI Assistant",
  "options": {
    "default_mode": "chat",
    "chat": {
      "welcome_message": "Hello! How can I help you today?",
      "max_history": 20
    },
    "code": {
      "git_repo": "your_user/your_repo",
      "git_branch": "main",
      "default_language": "python",
      "enable_ai_suggestions": true
    },
    "teach": {
      "default_lesson_type": "grammar",
      "export_formats": ["pdf", "docx", "markdown"]
    }
  },
  "schema": {
    "default_mode": "match(chat|code|teach)",
    "chat": {
      "welcome_message": "str?",
      "max_history": "int(1,100)?"
    },
    "code": {
      "git_repo": "str",
      "git_branch": "str?",
      "default_language": "match(python|javascript|yaml)",
      "enable_ai_suggestions": "bool?"
    },
    "teach": {
      "default_lesson_type": "match(grammar|vocabulary|conversation)",
      "export_formats": ["match(pdf|docx|markdown)"]
    }
  },
  "map": ["config:rw"],
  "environment": {
    "LOG_LEVEL": "info",
    "FLASK_ENV": "production"
  }
}