{
  "name": "Ansible Semaphore",
  "version": "v2.16.17-ha12",
  "slug": "ansible_semaphore",
  "description": "Ansible Semaphore UI using the official image with BoltDB. Persistent under /share/ansible_semaphore. Ingress enabled.",
  "url": "https://github.com/semaphoreui/semaphore",
  "arch": ["amd64", "aarch64"],
  "startup": "services",
  "boot": "auto",

  "ingress": true,
  "ingress_port": 3000,
  "panel_icon": "mdi:ansible",
  "panel_title": "Semaphore",
  "panel_admin": true,

  "map": ["share:rw"],

  "options": {
    "port": 3000,
    "log_level": "info"
  },
  "schema": {
    "port": "int(1024,65535)",
    "log_level": "list(debug|info|warn|error)?"
  },

  "environment": {
    "LOG_LEVEL": "!secret log_level",

    "SEMAPHORE_DB_DIALECT": "bolt",
    "SEMAPHORE_DB": "/share/ansible_semaphore/database.boltdb",

    "SEMAPHORE_TMP_PATH": "/share/ansible_semaphore/tmp",
    "SEMAPHORE_PLAYBOOK_PATH": "/share/ansible_semaphore/playbooks",
    "SEMAPHORE_PORT": "!secret port",

    "SEMAPHORE_ACCESS_KEY_ENCRYPTION": ""
  },

  "watchdog": "http://[HOST]:[PORT:3000]",
  "backup": "hot",
  "stage": "stable"
}