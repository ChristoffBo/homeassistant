{
  "name": "Ansible Semaphore",
  "version": "v2.16.17",
  "slug": "ansible_semaphore",
  "description": "Ansible Semaphore with BoltDB. Ingress-enabled. Persists under /share/ansible_semaphore.",
  "url": "https://github.com/semaphoreui/semaphore",
  "arch": ["amd64", "aarch64"],
  "startup": "services",
  "boot": "auto",

  "ingress": true,
  "ingress_port": 3000,
  "panel_icon": "mdi:ansible",
  "panel_title": "Semaphore",
  "panel_admin": true,

  "map": ["share:rw"],

  "options": {
    "admin_user": "admin",
    "admin_name": "Administrator",
    "admin_email": "admin@example.com",
    "admin_password": "changeme",
    "port": 3000,
    "log_level": "info"
  },
  "schema": {
    "admin_user": "str",
    "admin_name": "str",
    "admin_email": "email",
    "admin_password": "str",
    "port": "int(1024,65535)",
    "log_level": "list(debug|info|warn|error)?"
  },

  "watchdog": "http://[HOST]:[PORT:3000]",
  "backup": "hot",
  "stage": "stable"
}