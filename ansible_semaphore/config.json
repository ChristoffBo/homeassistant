{
  "name": "Ansible Semaphore",
  "version": "v2.16.17",
  "slug": "ansible_semaphore",
  "description": "Ansible Semaphore UI using the official image with BoltDB. Persistent under /share/ansible_semaphore.",
  "url": "https://github.com/semaphoreui/semaphore",
  "arch": ["amd64", "aarch64"],
  "startup": "services",
  "boot": "auto",

  "ingress": true,
  "ingress_port": 3000,
  "panel_icon": "mdi:ansible",
  "panel_title": "Semaphore",
  "panel_admin": true,

  "map": ["share:rw"],

  "options": {
    "port": 8055,
    "log_level": "info",
    "admin_user": "admin",
    "admin_name": "Admin User",
    "admin_email": "admin@example.com",
    "admin_password": "changeme"
  },
  "schema": {
    "port": "int(1024,65535)",
    "log_level": "list(debug|info|warn|error)?",
    "admin_user": "str",
    "admin_name": "str",
    "admin_email": "email",
    "admin_password": "str"
  },

  "environment": {
    "SEMAPHORE_DB_DIALECT": "bolt",
    "SEMAPHORE_DB": "/share/ansible_semaphore/database.boltdb",
    "SEMAPHORE_TMP_PATH": "/share/ansible_semaphore/tmp",
    "SEMAPHORE_PLAYBOOK_PATH": "/share/ansible_semaphore/playbooks",
    "SEMAPHORE_PORT": "{port}",
    "LOG_LEVEL": "{log_level}",

    "SEED_ADMIN_USER": "{admin_user}",
    "SEED_ADMIN_NAME": "{admin_name}",
    "SEED_ADMIN_EMAIL": "{admin_email}",
    "SEED_ADMIN_PASSWORD": "{admin_password}"
  },

  "watchdog": "http://[HOST]:[PORT:8055]",
  "backup": "hot",
  "stage": "stable"
}