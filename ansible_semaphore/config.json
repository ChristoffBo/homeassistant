{
  "name": "Ansible Semaphore",
  "version": "v2.16.17",
  "slug": "ansible_semaphore",
  "description": "Ansible Semaphore UI (official image) using BoltDB under /share/ansible_semaphore.",
  "url": "https://github.com/semaphoreui/semaphore",
  "arch": ["amd64", "aarch64"],
  "startup": "services",
  "boot": "auto",

  "ingress": false,

  "panel_icon": "mdi:ansible",
  "panel_title": "Semaphore",
  "panel_admin": true,

  "map": ["share:rw"],

  "options": {
    "port": 8055,
    "log_level": "info",
    "admin_user": "admin",
    "admin_name": "Admin User",
    "admin_email": "admin@example.com",
    "admin_password": "changeme"
  },
  "schema": {
    "port": "int(1024,65535)",
    "log_level": "list(debug|info|warn|error)?",
    "admin_user": "str?",
    "admin_name": "str?",
    "admin_email": "email?",
    "admin_password": "password?"
  },

  "environment": {
    "SEMAPHORE_DB_DIALECT": "bolt",
    "SEMAPHORE_DB": "/share/ansible_semaphore/database.boltdb",
    "SEMAPHORE_TMP_PATH": "/share/ansible_semaphore/tmp",
    "SEMAPHORE_PLAYBOOK_PATH": "/share/ansible_semaphore/playbooks"
  },

  "ports": {
    "8055/tcp": 8055
  },
  "ports_description": {
    "8055/tcp": "Semaphore Web UI (container listens on the same port)"
  },

  "watchdog": "http://[HOST]:[PORT:8055]",
  "backup": "hot",
  "stage": "stable"
}