{
  "name": "Gitea",
  "version": "1.18.0",
  "slug": "gitea",
  "description": "Self-hosted Git service with GUI configuration",
  "url": "https://gitea.io",
  "arch": ["amd64", "armv7", "aarch64"],
  "startup": "services",
  "boot": "auto",
  "panel_icon": "mdi:git",
  "ports": {
    "3000/tcp": 3000,
    "2222/tcp": 2222
  },
  "map": ["share:rw", "ssl"],
  "image": "gitea/gitea:1.18.0",
  "options": {
    "log_level": "info",
    "domain": "homeassistant.local",
    "disable_registration": false,
    "ssh_enabled": true,
    "db_type": "sqlite3",
    "db_host": "",
    "db_name": "gitea",
    "db_user": "gitea",
    "db_pass": "",
    "app_name": "Gitea on Home Assistant"
  },
  "schema": {
    "log_level": {
      "name": "Log Level",
      "description": "Set the logging verbosity",
      "type": "list",
      "options": ["trace", "debug", "info", "warning", "error", "fatal"],
      "default": "info"
    },
    "domain": {
      "name": "Domain",
      "description": "The domain or IP for Gitea access",
      "type": "str",
      "default": "homeassistant.local"
    },
    "disable_registration": {
      "name": "Disable Registration",
      "description": "Prevent new user signups",
      "type": "bool",
      "default": false
    },
    "ssh_enabled": {
      "name": "Enable SSH",
      "description": "Allow Git operations via SSH",
      "type": "bool",
      "default": true
    },
    "db_type": {
      "name": "Database Type",
      "description": "Storage backend for Gitea",
      "type": "list",
      "options": ["sqlite3", "mysql", "postgres"],
      "default": "sqlite3"
    },
    "db_host": {
      "name": "Database Host",
      "description": "Only needed for MySQL/PostgreSQL",
      "type": "str",
      "default": "",
      "required": false
    },
    "db_name": {
      "name": "Database Name",
      "type": "str",
      "default": "gitea"
    },
    "db_user": {
      "name": "Database User",
      "type": "str",
      "default": "gitea"
    },
    "db_pass": {
      "name": "Database Password",
      "type": "str",
      "default": "",
      "required": false
    },
    "app_name": {
      "name": "Application Name",
      "type": "str",
      "default": "Gitea on Home Assistant"
    }
  }
}