{
  "name": "Home Assistant Addon Updater Enhanced",
  "version": "1.3.0",
  "slug": "addon_updater_enhanced",
  "description": "Run-once addon update checker with GitHub, Gitea, and Gotify support",
  "url": "https://github.com/yourusername/hassio-addons",
  "arch": ["aarch64", "amd64", "armhf", "armv7", "i386"],
  "startup": "application",
  "boot": "manual",
  "init": false,
  "options": {
    "gotify_url": "",
    "gotify_token": "",
    "github_repos": [
      {
        "name": "My GitHub Repo",
        "owner": "yourusername",
        "repo": "hassio-addons",
        "token": ""
      }
    ],
    "gitea_instances": [
      {
        "name": "Local Gitea",
        "url": "http://your-gitea-server:port",
        "owner": "yourusername",
        "token": "",
        "verify_ssl": true
      }
    ]
  },
  "schema": {
    "gotify_url": "str",
    "gotify_token": "str",
    "github_repos": [{
      "name": "str",
      "owner": "str",
      "repo": "str",
      "token": "str?"
    }],
    "gitea_instances": [{
      "name": "str",
      "url": "str",
      "owner": "str",
      "token": "str?",
      "verify_ssl": "bool?"
    }]
  }
}
