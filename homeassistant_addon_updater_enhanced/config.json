{
  "name": "Home Assistant Addon Updater Enhanced",
  "version": "1.1.0",
  "slug": "addon_updater_enhanced",
  "description": "Comprehensive addon update checker for GitHub & Gitea with Gotify notifications",
  "url": "https://github.com/yourusername/hassio-addons",
  "arch": ["aarch64", "amd64", "armhf", "armv7", "i386"],
  "startup": "application",
  "boot": "auto",
  "map": ["config:rw", "ssl:rw"],
  "init": false,
  "options": {
    "gotify_url": "",
    "gotify_token": "",
    "check_interval": 3600,
    "github_repos": [],
    "gitea_instances": [],
    "verbose_logging": false
  },
  "schema": {
    "gotify_url": "match(^https?://.+|^$)",
    "gotify_token": "str",
    "check_interval": "int(300,)",
    "github_repos": [{
      "name": "str",
      "owner": "str",
      "repo": "str",
      "token": "str?",
      "branch": "str?"
    }],
    "gitea_instances": [{
      "name": "str",
      "url": "match(^https?://.+)",
      "owner": "str",
      "token": "str?",
      "verify_ssl": "bool?"
    }],
    "verbose_logging": "bool"
  }
}
