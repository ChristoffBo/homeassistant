{
  "name": "Jarvis Prime",
  "version": "1.0.3",
  "slug": "jarvis_prime",
  "description": "Gotify Smart Bot assistant (Prime edition) with beautifying, monitoring, digest, weather, DNS, uptime checks, SMTP intake, personalities, optional Gotify/ntfy proxy, and LLM + memory personality engine.",
  "arch": [
    "aarch64",
    "amd64",
    "armv7"
  ],
  "startup": "services",
  "boot": "auto",
  "init": false,
  "ingress": false,
  "ports": {
    "2525/tcp": 2525,
    "2580/tcp": 2580
  },
  "map": [
    "share:rw"
  ],
  "options": {
    "bot_name": "Jarvis Prime",
    "bot_icon": "ðŸ§ ",
    "gotify_url": "http://10.0.0.99:8091",
    "gotify_client_token": "CHANGE_ME_CLIENT",
    "gotify_app_token": "CHANGE_ME_APP",
    "jarvis_app_name": "Jarvis",

    "retention_hours": 24,
    "beautify_enabled": true,
    "beautify_inline_images": false,
    "silent_repost": true,

    "chat_enabled": true,
    "ai_checkins_enabled": false,
    "cache_refresh_minutes": 60,

    "weather_enabled": true,
    "weather_lat": -26.2041,
    "weather_lon": 28.0473,
    "weather_city": "Johannesburg",
    "weather_time": "07:00",

    "digest_enabled": true,
    "digest_time": "08:00",

    "radarr_enabled": true,
    "radarr_url": "http://10.0.0.240:7878",
    "radarr_api_key": "CHANGE_ME",
    "radarr_time": "07:30",

    "sonarr_enabled": true,
    "sonarr_url": "http://10.0.0.240:8989",
    "sonarr_api_key": "CHANGE_ME",
    "sonarr_time": "07:30",

    "technitium_enabled": true,
    "technitium_url": "http://10.0.0.99:5380",
    "technitium_user": "admin",
    "technitium_pass": "CHANGE_ME",
    "technitium_api_key": "",

    "uptimekuma_enabled": true,
    "uptimekuma_url": "http://10.0.0.99:3001",
    "uptimekuma_api_key": "CHANGE_ME",

    "heartbeat_enabled": true,
    "heartbeat_interval_minutes": 120,
    "heartbeat_start": "06:00",
    "heartbeat_end": "20:00",

    "personality_mood": "serious",

    "smtp_enabled": true,
    "smtp_bind": "0.0.0.0",
    "smtp_port": 2525,
    "smtp_max_bytes": 262144,
    "smtp_dummy_rcpt": "alerts@jarvis.local",
    "smtp_accept_any_auth": true,
    "smtp_rewrite_title_prefix": "[SMTP]",
    "smtp_allow_html": false,
    "smtp_priority_default": 5,
    "smtp_priority_map": "{ \"high\": 7, \"urgent\": 8, \"critical\": 9, \"low\": 3, \"normal\": 5 }",

    "proxy_enabled": false,
    "proxy_bind": "0.0.0.0",
    "proxy_port": 2580,
    "proxy_gotify_url": "http://10.0.0.99:8091",
    "proxy_ntfy_url": "http://10.0.0.99:8080",

    "custom_aliases": "{\n  \"dns\": \"dns\",\n  \"DNS\": \"dns\",\n  \"Dns\": \"dns\",\n  \"films\": \"upcoming_movies\",\n  \"tv\": \"upcoming_series\",\n  \"temps\": \"weather\",\n  \"forecast week\": \"forecast\",\n  \"up movies\": \"upcoming_movies\",\n  \"up series\": \"upcoming_series\"\n}",

    "llm_enabled": true,
    "llm_timeout_seconds": 5,
    "llm_max_cpu_percent": 70,
    "llm_memory_enabled": true,
    "personality_persistent": true,
    "ollama_base_url": "http://127.0.0.1:11434",
    "llm_models_priority": [
      "qwen2.5:0.5b-instruct",
      "phi:2",
      "tinyllama:1.1b-chat"
    ]
  },
