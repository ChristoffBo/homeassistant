{
  "name": "ntfy Server (Official)",
  "version": "0.1.4",
  "slug": "ntfy",
  "description": "Self-hosted ntfy server using the official Docker image, with persistent storage (/data).",
  "url": "https://ntfy.sh",
  "arch": [
    "aarch64",
    "amd64",
    "armv7",
    "armhf"
  ],
  "startup": "services",
  "init": false,
  "ingress": false,
  "panel_icon": "mdi:bell",
  "panel_title": "ntfy",
  "webui": "http://[HOST]:[PORT:8008]",
  "watchdog": "tcp://[HOST]:[PORT:8008]",
  "ports": {
    "8008/tcp": 8008
  },
  "ports_description": {
    "8008/tcp": "Direct access to ntfy Web UI & API"
  },
  "options": {
    "listen_port": 8008,
    "base_url": "http://10.0.0.100",
    "behind_proxy": false,
    "attachments": {
      "enabled": true,
      "dir": "/data/attachments",
      "file_size_limit": "15M",
      "total_size_limit": "5G",
      "expiry": "3h"
    },
    "cache": {
      "file": "/data/cache.db"
    },
    "auth": {
      "enabled": false,
      "default_access": "read-write",
      "admin_user": "",
      "admin_password": ""
    }
  },
  "schema": {
    "listen_port": "int",
    "base_url": "str?",
    "behind_proxy": "bool",
    "attachments": {
      "enabled": "bool",
      "dir": "str",
      "file_size_limit": "str",
      "total_size_limit": "str",
      "expiry": "str"
    },
    "cache": {
      "file": "str"
    },
    "auth": {
      "enabled": "bool",
      "default_access": "list(read-write|read-only|write-only|deny-all)",
      "admin_user": "str?",
      "admin_password": "str?"
    }
  }
}
