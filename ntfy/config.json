{
  "name": "ntfy.sh",
  "version": "1.0.0",
  "slug": "ntfy",
  "description": "Self-hosted push notification server",
  "url": "https://ntfy.sh",
  "arch": ["amd64", "aarch64", "armv7"],
  "startup": "services",
  "boot": "auto",
  "ingress": false,
  "host_network": true,
  "webui": "http://[HOST]:[PORT:80]/",
  "panel_icon": "mdi:bell-ring",
  "ports": {
    "80/tcp": 8081
  },
  "ports_description": {
    "80/tcp": "Web UI & API"
  },
  "map": ["config:rw"],
  "options": {
    "listen_port": 80,
    "base_url": "",
    "cache_file": "/data/cache.db",
    "auth_file": "/data/user.db",
    "attachment_cache_dir": "/data/attachments",
    "enable_auth": false,
    "enable_file_attachments": true
  },
  "schema": {
    "listen_port": "int",
    "base_url": "str?",
    "cache_file": "str?",
    "auth_file": "str?",
    "attachment_cache_dir": "str?",
    "enable_auth": "bool",
    "enable_file_attachments": "bool"
  }
}
