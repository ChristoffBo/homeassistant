{
  "name": "Remote Linux Backup",
  "version": "1.0.14",
  "slug": "remote_linux_backup",
  "description": "Backup and restore remote Linux systems via SSH, Rsync, DD, or ZFS with optional Gotify notifications and cloud/NAS destinations.",
  "url": "https://github.com/ChristoffBo/homeassistant",
  "arch": ["amd64", "aarch64", "armv7"],
  "startup": "services",
  "boot": "auto",
  "ingress": true,
  "panel_icon": "mdi:backup-restore",
  "panel_title": "Remote Linux Backup",
  "ports": {
    "8066/tcp": 8066
  },
  "map": ["config:rw"],
  "options": {
    "ui_port": 8066,
    "known_hosts": "",
    "gotify_enabled": false,
    "gotify_url": "",
    "gotify_token": "",
    "auto_install_tools": true,
    "dropbox_enabled": false,
    "dropbox_remote": "dropbox:HA-Backups",
    "nas_mounts": "",
    "server_presets": "",
    "ssh_port": 22,
    "bandwidth_limit": "",
    "rsync_excludes": "",
    "retention_days": 0
  },
  "schema": {
    "ui_port": "int(1,65535)?",
    "known_hosts": "str?",
    "gotify_enabled": "bool",
    "gotify_url": "str?",
    "gotify_token": "str?",
    "auto_install_tools": "bool",
    "dropbox_enabled": "bool",
    "dropbox_remote": "str?",
    "nas_mounts": "str?",
    "server_presets": "str?",
    "ssh_port": "int(1,65535)?",
    "bandwidth_limit": "str?",
    "rsync_excludes": "str?",
    "retention_days": "int(0,365)?"
  }
}
