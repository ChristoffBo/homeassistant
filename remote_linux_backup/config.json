{
  "name": "Remote Linux Backup",
  "version": "1.0.3",
  "slug": "remote_linux_backup",
  "description": "Backup and restore remote Linux systems via password-only SSH. Supports dd, rsync, ZFS, NAS mounts, Dropbox; per-job paths; Gotify; scheduler; dark UI.",
  "arch": ["amd64", "aarch64", "armv7", "i386"],
  "startup": "services",
  "boot": "auto",
  "ingress": true,
  "ingress_port": 8066,
  "panel_icon": "mdi:backup-restore",
  "map": ["config:rw"],
  "options": {
    "ui_port": 8066,
    "gotify_enabled": false,
    "gotify_token": "",
    "dropbox_enabled": false,
    "dropbox_remote": "dropbox:HA-Backups",
    "nas_mounts": [],
    "jobs": []
  },
  "schema": {
    "ui_port": "int?",
    "gotify_enabled": "bool?",
    "gotify_token": "str?",
    "dropbox_enabled": "bool?",
    "dropbox_remote": "str?",
    "nas_mounts": ["str?"],
    "jobs": ["str?"]
  },
  "ports": {
    "8066/tcp": 8066
  },
  "ports_description": {
    "8066/tcp": "Web UI Port"
  }
}