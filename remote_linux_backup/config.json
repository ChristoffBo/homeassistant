{
  "name": "Remote Linux Backup",
  "version": "1.2.0",
  "slug": "remote_linux_backup",
  "description": "Full backup/restore solution: SSH rsync & dd images, SMB/NFS mounts, scheduling, manifests, verify, encryption, UI with pickers.",
  "url": "https://github.com/ChristoffBo/homeassistant",
  "arch": ["aarch64", "amd64", "armv7", "i386"],
  "startup": "services",
  "boot": "auto",
  "init": false,
  "webui": "http://[HOST]:[PORT:8066]",
  "ingress": false,
  "ports": {
    "8066/tcp": 18066
  },
  "ports_description": {
    "8066/tcp": "Web UI"
  },
  "map": ["config:rw", "ssl:ro", "share:rw", "media:rw", "backup:rw"],
  "privileged": ["SYS_ADMIN"],
  "apparmor": false,
  "full_access": false,
  "environment": {},
  "options": {
    "storage_path": "/config/remote_linux_backup/backups",
    "gotify_url": "",
    "gotify_token": "",
    "auto_check_hours": 0,
    "timezone": "Africa/Johannesburg"
  },
  "schema": {
    "storage_path": "str",
    "gotify_url": "str?",
    "gotify_token": "str?",
    "auto_check_hours": "int",
    "timezone": "str"
  }
}
