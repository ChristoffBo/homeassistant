{
  "name": "Home Assistant Addons Docker Version Updater",
  "version": "1.0.0",
  "slug": "addons_version_updater",
  "description": "Checks and updates add-on version numbers to match latest Docker image tags",
  "url": "https://github.com/ChristoffBo/homeassistant",
  "startup": "services",
  "boot": "auto",
  "arch": [
    "amd64",
    "armv7",
    "aarch64"
  ],
  "ports": {},
  "options": {
    "github_repo": "https://github.com/yourrepo/homeassistant",
    "github_username": "",
    "github_token": "",
    "check_cron": "0 3 * * *",
    "startup_cron": "0 4 * * *",
    "timezone": "Africa/Johannesburg",
    "max_log_lines": 1000,
    "dry_run": false,
    "skip_push": false,
    "notifications": {
      "enabled": false,
      "service": "gotify",
      "config": {
        "url": "",
        "token": "",
        "to": ""
      },
      "on_success": true,
      "on_error": true,
      "on_updates": true
    }
  },
  "schema": {
    "github_repo": "str",
    "github_username": "str",
    "github_token": "str",
    "check_cron": "str",
    "startup_cron": "str?",
    "timezone": "str?",
    "max_log_lines": "int?",
    "dry_run": "bool?",
    "skip_push": "bool?",
    "notifications": {
      "enabled": "bool?",
      "service": "str?",
      "config": {
        "url": "str?",
        "token": "str?",
        "to": "str?"
      },
      "on_success": "bool?",
      "on_error": "bool?",
      "on_updates": "bool?"
    }
  },
  "map": [
    "config:ro",
    "addons:rw",
    "backup:rw",
    "share:rw"
  ],
  "init": false,
  "host_network": false,
  "privileged": []
}
