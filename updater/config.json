{
  "name": "Home Assistant Add-on Updater",
  "version": "1.0.0",
  "slug": "updater",
  "description": "Automatically checks and updates Home Assistant add-ons based on Docker image versions.",
  "url": "https://github.com/ChristoffBo/homeassistant",
  "arch": ["amd64", "armv7", "aarch64"],
  "startup": "services",
  "boot": "auto",
  "options": {
    "timezone": "Africa/Johannesburg",
    "dry_run": false,
    "skip_push": false,
    "debug": true,
    "enable_notifications": true,
    "notification_service": "gotify",
    "notification_url": "http://10.0.0.99:8091",
    "notification_token": "",
    "notification_to": "",
    "notify_on_success": true,
    "notify_on_error": true,
    "notify_on_updates": true,
    "skip_addons": ["heimdall"],
    "git_sources": {
      "github": {
        "enabled": true,
        "repository": "https://github.com/ChristoffBo/homeassistant",
        "username": "ChristoffBo",
        "token": ""
      },
      "gitea": {
        "enabled": false,
        "repository": "http://10.0.0.100:3001/youruser/homeassistant.git",
        "username": "youruser",
        "token": ""
      }
    }
  },
  "schema": {
    "timezone": "str",
    "dry_run": "bool",
    "skip_push": "bool",
    "debug": "bool",
    "enable_notifications": "bool",
    "notification_service": "str",
    "notification_url": "str",
    "notification_token": "str",
    "notification_to": "str",
    "notify_on_success": "bool",
    "notify_on_error": "bool",
    "notify_on_updates": "bool",
    "skip_addons": ["str"],
    "git_sources": {
      "github": {
        "enabled": "bool",
        "repository": "str",
        "username": "str",
        "token": "str"
      },
      "gitea": {
        "enabled": "bool",
        "repository": "str",
        "username": "str",
        "token": "str"
      }
    }
  },
  "panel_icon": "mdi:update",
  "init": false
}
