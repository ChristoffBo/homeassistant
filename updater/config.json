{
  "name": "Addon Version Updater",
  "version": "1.0.0",
  "slug": "addon_updater",
  "description": "Automatically updates addon versions from Docker Hub",
  "url": "https://github.com/yourrepo/addon-updater",
  "arch": ["amd64", "armv7", "aarch64"],
  "startup": "application",
  "boot": "auto",
  "options": {
    "github_repo": "",
    "github_username": "",
    "github_token": "",
    "check_cron": "0 3 * * *",
    "timezone": "UTC",
    "max_log_lines": 1000,
    "dry_run": false,
    "skip_push": false,
    "notifications_enabled": false,
    "notification_service": "gotify",
    "notification_url": "",
    "notification_token": "",
    "notification_to": "",
    "notify_on_success": true,
    "notify_on_error": true,
    "notify_on_updates": true
  },
  "schema": {
    "github_repo": "str",
    "github_username": "str",
    "github_token": "str",
    "check_cron": "str",
    "timezone": "str?",
    "max_log_lines": "int?",
    "dry_run": "bool?",
    "skip_push": "bool?",
    "notifications_enabled": "bool?",
    "notification_service": "str?",
    "notification_url": "str?",
    "notification_token": "str?",
    "notification_to": "str?",
    "notify_on_success": "bool?",
    "notify_on_error": "bool?",
    "notify_on_updates": "bool?"
  },
  "map": ["config:rw", "addons:rw", "backup:rw", "share:rw"]
}
