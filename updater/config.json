{
  "name": "Home Assistant Add-on Updater",
  "version": "1.0.0",
  "slug": "addon_updater",
  "description": "Automatically updates Home Assistant add-ons to their latest versions",
  "url": "https://github.com/your-username/your-repo",
  "arch": ["amd64", "armv7", "aarch64"],
  "startup": "application",
  "boot": "auto",
  "init": false,
  "host_network": true,
  "hassio_api": true,
  "hassio_role": "manager",
  "docker_api": true,
  "apparmor": false,
  "map": ["config:rw"],
  "privileged": ["SYS_ADMIN"],
  "devices": ["/dev/fuse:/dev/fuse:rwm"],
  "full_access": true,
  "options": {
    "github_repo": "https://github.com/your-username/your-repo.git",
    "github_username": "your-github-username",
    "github_token": "your-github-token",
    "timezone": "Your/Timezone",
    "dry_run": false,
    "skip_push": false,
    "debug": true,
    "notifications_enabled": true,
    "notification_service": "gotify",
    "notification_url": "http://your-gotify-ip:port",
    "notification_token": "your-gotify-token",
    "notify_on_success": true,
    "notify_on_error": true,
    "notify_on_updates": true,
    "check_cron": "0 10 * * *"
  },
  "schema": {
    "github_repo": "str",
    "github_username": "str",
    "github_token": "str",
    "timezone": "str",
    "dry_run": "bool",
    "skip_push": "bool",
    "debug": "bool",
    "notifications_enabled": "bool",
    "notification_service": "str",
    "notification_url": "str",
    "notification_token": "str",
    "notification_to": "str?",
    "notify_on_success": "bool",
    "notify_on_error": "bool",
    "notify_on_updates": "bool",
    "check_cron": "str?",
    "startup_cron": "str?"
  }
}