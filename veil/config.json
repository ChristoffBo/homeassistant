{
  "name": "Veil",
  "version": "1.0.1",
  "slug": "veil",
  "description": "Veil â€” Privacy-First DNS/DHCP server with full encrypted DNS (DoH/DoT/DoQ) and persistent storage under /share/veil.",
  "startup": "services",
  "boot": "auto",
  "arch": ["amd64", "armv7", "armhf", "aarch64"],

  "host_network": true,
  "full_access": true,
  "homeassistant_api": true,
  "privileged": ["NET_ADMIN"],
  "devices": ["/dev/net/tun"],
  "map": ["config:rw", "share:rw"],

  "ingress": true,
  "ingress_port": 8080,
  "panel_icon": "mdi:shield-lock",
  "panel_title": "Veil",

  "ports": {
    "53/udp": 53,
    "53/tcp": 53,
    "67/udp": 67,
    "68/udp": 68,
    "69/udp": 69,
    "123/udp": 123,
    "853/tcp": 853,
    "853/udp": 853,
    "784/udp": 784,
    "443/tcp": 443,
    "80/tcp": 80,
    "8080/tcp": 8080,
    "9090/tcp": 9090,
    "9180/tcp": 9180
  },

  "options": {
    "dns_enabled": true,
    "dhcp_enabled": false,
    "doh_enabled": true,
    "dot_enabled": true,
    "doq_enabled": true,
    "ui_enabled": true,
    "blocklists": [
      "https://raw.githubusercontent.com/hagezi/dns-blocklists/main/hosts/ultimate.txt",
      "https://adaway.org/hosts.txt",
      "https://someonewhocares.org/hosts/hosts",
      "https://blocklistproject.github.io/Lists/adguard.txt",
      "https://raw.githubusercontent.com/StevenBlack/hosts/master/hosts"
    ]
  },

  "schema": {
    "dns_enabled": "bool",
    "dhcp_enabled": "bool",
    "doh_enabled": "bool",
    "dot_enabled": "bool",
    "doq_enabled": "bool",
    "ui_enabled": "bool",
    "blocklists": ["str"]
  }
}
